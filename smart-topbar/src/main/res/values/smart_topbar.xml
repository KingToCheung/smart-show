<resources>
    <string name="app_name">smart-topbar</string>
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="colorAccent">#FF4081</color>
    <item name="smart_show_top_bar_container" type="id" />

    <style name="TextAppearance.Topbar.Message" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/topbar_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <declare-styleable name="TopbarLayout">
        <attr name="android:maxWidth" />
        <attr name="elevation" />
        <attr name="maxActionInlineWidth" format="dimension" />
    </declare-styleable>
    <dimen name="topbar_padding_vertical_2lines">24dp</dimen>
    <dimen name="topbar_padding_vertical">14dp</dimen>

    <dimen name="topbar_padding_horizontal">12dp</dimen>

    <dimen name="topbar_extra_spacing_horizontal">0dp</dimen>

    <integer name="topbar_text_max_lines">2</integer>

    <dimen name="topbar_text_size">14sp</dimen>

    <style name="Widget.Design.Topbar" parent="android:Widget">
        <item name="android:minWidth">@dimen/topbar_min_width</item>
        <item name="android:maxWidth">@dimen/topbar_max_width</item>
        <item name="android:background">@drawable/design_snackbar_background</item>
        <item name="android:paddingLeft">@dimen/topbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/topbar_padding_horizontal</item>
        <item name="elevation">@dimen/topbar_elevation</item>
        <item name="maxActionInlineWidth">@dimen/topbar_action_inline_max_width</item>


    </style>

    <color name="topbar_background_color">#323232</color>

    <dimen name="topbar_background_corner_radius">0dp</dimen>
    <dimen name="topbar_max_width">-1px</dimen>

    <dimen name="topbar_min_width">-1px</dimen>

    <dimen name="topbar_elevation">6dp</dimen>


    <dimen name="topbar_action_inline_max_width">128dp</dimen>

</resources>
